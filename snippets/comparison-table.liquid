       }

      .section--{{ section.id }} td, .section--{{ section.id }} th {
    border-block-width: 0px !important;
            }

      td.feature-col:before, td.feature-col:before,  .section--{{ section.id }} td {
    border-style: none !important;
}
        /* Responsive Table for Mobile */
        @media (max-width: 768px) {
            .section--{{ section.id }}.table-container {
                overflow-x: auto; /* Allow horizontal scrolling */
                -webkit-overflow-scrolling: touch; /* Smooth scroll on mobile */
            }

            .section--{{ section.id }} table {
                width: 600px; /* Force table to extend beyond the screen */
                white-space: nowrap; /* Prevent columns from wrapping */
            }

            .section--{{ section.id }} th, .section--{{ section.id }} td {
                padding: 10px;
                font-size: 12px;
            }

            .section--{{ section.id }} img {
                width: 40px;
            }

            .section--{{ section.id }} .buy-now-btn {
                padding: 8px 10px;
                font-size: 12px;
            }
        }


      .colored-border {
        padding: 15px;
        border: solid #ff5e8a;
        border-width: 1px 1px 0 1px !important;
        padding-bottom: 0px;
      }
      .colored-border-center {
