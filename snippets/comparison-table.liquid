        }

        .section--{{ section.id }} th, .section--{{ section.id }}  td {
            /* border: 1px solid #ddd; */
          border-collapse: collapse;
            text-align: center;
            padding: 15px;
            font-size: 14px;
        }

        .section--{{ section.id }}  th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        .section--{{ section.id }}  .feature-col {
            text-align: left;
            font-weight: bold;
            background-color: #f9f9f9;
        }

        /* Highlighted Column (VitaminH2) */
        .section--{{ section.id }}  .highlight {
            /* border: 2px solid #ff5e8a; */
          padding: unset;
            position: relative;
        }

        .section--{{ section.id }}  .highlight h3 {
            margin: 0;
            font-size: 1rem;
        }

        .section--{{ section.id }}  img {
            width: 60px;
            margin-bottom: 10px;
        }

        .section--{{ section.id }}  .checkmark {
            color: green;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .section--{{ section.id }}  .dash {
            color: #ccc;
            font-size: 1.2rem;
        }

        /* Buy Now Button */
        .section--{{ section.id }}  .buy-now-btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #ff5e8a;
            color: white;
            text-decoration: none;
            font-weight: bold;
            border-radius: 4px;
        }

        .section--{{ section.id }}  .buy-now-btn:hover {
            background-color: #e04c72;
        }

      
       .product-one-image{
          padding: 15px;
       }
      .product-next-image{
