{%- comment -%} Info Section Snippet {%- endcomment -%}
{% assign text_parts = 'Low Cellular Energy|Poor Focus|Weakened Immunity|Chronic Fatigue' | split: '|' %}

<div class="{{ info_classes | default: '' }}">
  <div
    class="mb-5 font-display font-medium text-[14px] md:text-[18px] leading-[1.4] text-[#44403C] md:max-w-[436px]"
  >
    {% for part in text_parts %}
      {{ part }}
      {% unless forloop.last %}
        <span class="text-[#EA5167]"> âžœ </span>
      {% endunless %}
    {% endfor %}
  </div>

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'testimonial' %}
        {% if block.settings.quote != blank %}
          <div class="bg-[#FDF4E9] max-sm:py-[17px] max-sm:px-[24px] rounded-[12px] max-w-[520px] md:px-6 md:py-6">
            <blockquote class="!mb-3 font-semibold text-[14px] md:text-[20px] font-nunito leading-[1.4] md:leading-normal">
              {{ block.settings.quote }}
            </blockquote>
            <div class="flex items-center">
              {% if block.settings.avatar != blank %}
                <img
                  src="{{ block.settings.avatar | image_url }}"
                  alt="{{ block.settings.author }}"
                  class="w-10 h-10 rounded-full mr-3"
                  loading="lazy"
                  width="40"
                  height="40"
                >
              {% endif %}
              {% if block.settings.author != blank %}
                <span class="text-[14px] md:text-[16px] text-[#57534E] font-medium font-display">
                  {{ block.settings.author }}
                </span>
              {% endif %}
            </div>
          </div>
        {% endif %}
    {% endcase %}
  {% endfor %}
</div>
