<div
  id="section-{{ section.id }}"
  class="w-full relative {{ section.settings.custom_classes }} outline outline-red-700 max-sm:pt-[64px] md:pb-[96px]"
  style="background: {{ section.settings.background_color }};"
>
  <div class="mx-auto max-sm:px-6" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex items-center  max-sm:flex-col-reverse gap-6 md:!gap-[32px] flex-col lg:flex-row">
      <!-- Left Image Section -->
      <div class="flex-1 relative w-full">
        {% if section.settings.main_image %}
          <div class="relative">
            <img
              src="{{ section.settings.main_image | image_url: width: 600, height: 600 }}"
              alt="{{ section.settings.main_image.alt | default: 'Energy comparison' }}"
              loading="lazy"
              class="w-[80.4%] md:w-[61.8%] h-auto rounded-3xl object-cover max-sm:aspect-[263/252]"
              width="600"
              height="600"
            >

            <!-- Overlay callouts -->

            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'image_callout' %}
                  <div
                    class="absolute top-[25px] md:top-[39px] left-[62px] md:left-[247px] z-10 px-6 py-[9px] rounded-full  whitespace-nowrap"
                    style="                      background: {{ block.settings.callout_bg }};"
                  >
                    {% if block.settings.callout_text != blank %}
                      <div
                        class="block font-semibold font-nunito text-[14px] leading-[2.14] md:text-[18px] md:leading-[1.66]"
                        style="color: {{ block.settings.text_color }}; "
                      >
                        {{ block.settings.callout_text }}
                      </div>
                    {% endif %}
                    {% if block.settings.show_arrow %}
                      <div
                        class="hidden md:block absolute bottom-0 left-1/2 transform -translate-x-5 translate-y-[100%] "
                      >
                        {% render 'icon-long-arrow-desktop' %}
                      </div>
                      <div
                        class="block md:hidden absolute  -bottom-2 right-[15px] top-[55px]"
                      >
                        {% render 'icon-long-arrow-mobile' %}
                      </div>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.bottom_image %}
          <div class="relative block md:h-[366px]  max-sm:-mt-[38px] md:-mt-[141px] md:ml-auto">
            <img
              src="{{ section.settings.bottom_image | image_url: width: 400, height: 400 }}"
              alt="{{ section.settings.bottom_image.alt | default: 'Supplements comparison' }}"
              loading="lazy"
              class="block max-sm:aspect-[204/194] md:aspect-auto  w-[62.4%] md:w-[61.8%] ml-auto h-auto rounded-[24px]"
              width="400"
              height="400"
            >

            {% if section.settings.bottom_callout_text != blank %}
              <div
                class="relative md:absolute max-sm:mt-[25px] md:w-fit md:bottom-[88px] md:px-6 md:py-[9px] rounded-full md:whitespace-nowrap text-center text-[14px] leading-[1.4] font-semibold font-nunito md:text-[18px] md:leading-[1.66] max-sm:px-6 max-sm:py-2"
                style="background: {{ section.settings.bottom_callout_bg }};"
              >
                <span style="color: {{ section.settings.bottom_text_color }}">
                  {{ section.settings.bottom_callout_text }}
                </span>

                <div
                  class="hidden md:block  absolute left-[110px] -top-[120px] rotate-180"
                >
                  {% render 'icon-long-arrow-desktop' %}
                </div>

                <div
                  class="block md:hidden  absolute left-[90px] -top-[90px] rotate-180"
                >
                  {% render 'icon-long-arrow-mobile' %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link | default: '#' }}"
            class="md:hidden py-3 rounded-[8px] w-full flex flex-center justify-center no-underline font-bold font-nunito border-0 cursor-pointer text-[16px] leading-normal mt-6"
            style="
              background: {{ section.settings.button_bg }};
              color: {{ section.settings.button_text_color }};
            "
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Right Content Section -->
      <div class="flex-1 ">
        <div class="max-w-[520px] md:ml-auto">
          {% if section.settings.main_title != blank %}
            <h2
              class="font-medium leading-[1.4] text-[20px] md:text-[36px] md:leading-[1.22]"
              style="color: {{ section.settings.title_color }};"
            >
              {{ section.settings.main_title }}
            </h2>
          {% endif %}

          {% if section.settings.subtitle != blank %}
            <h3
              class="font-medium leading-[1.4] text-[20px] !mb-5 md:text-[36px] md:leading-[1.22]"
              style="color: {{ section.settings.subtitle_color }};"
            >
              {{ section.settings.subtitle }}
            </h3>
          {% endif %}

          {% if section.settings.description != blank %}
            <div
              class="font-nunito font-medium text-[14px] md:text-[18px] leading-[1.4] md:mb-6"
              style="                color: {{ section.settings.description_color }};"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank %}
            <a
              href="{{ section.settings.button_link | default: '#' }}"
              class="hidden md:block md:w-fit py-3.5 px-[18px] md:px-5 md:py-3 rounded-lg no-underline font-bold text-[16px] ease-in-out border-0 cursor-pointer font-nunito "
              style="
                background: {{ section.settings.button_bg }};
                color: {{ section.settings.button_text_color }};
              "
            >
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #section-{{ section.id }} {
    width: 100%;
    position: relative;
  }

  #section-{{ section.id }} .energy-comparison-images {
    flex: 1;
    position: relative;
  }

  #section-{{ section.id }} .main-image-container {
    position: relative;
    margin-bottom: 40px;
  }

  #section-{{ section.id }} .main-comparison-image {
    width: 100%;
    height: auto;
    border-radius: 20px;
  }

  #section-{{ section.id }} .image-callout {
    position: absolute;
    padding: 12px 16px;
    border-radius: 8px;
    white-space: nowrap;
    z-index: 2;

  }

  #section-{{ section.id }} .callout-arrow {
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid;
  }

  #section-{{ section.id }} .bottom-image-container {
    position: relative;
    display: inline-block;
  }

  #section-{{ section.id }} .bottom-comparison-image {
    width: 280px;
    height: auto;
    border-radius: 15px;
  }

  #section-{{ section.id }} .bottom-callout {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 10px 16px;
    border-radius: 6px;
    white-space: nowrap;
  }

  #section-{{ section.id }} .energy-comparison-text {
    flex: 1;
    max-width: 500px;
  }

  #section-{{ section.id }} .comparison-title {
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 15px 0;
  }

  #section-{{ section.id }} .comparison-subtitle {
    font-weight: 600;
    line-height: 1.3;
    margin: 0 0 25px 0;
  }

  #section-{{ section.id }} .comparison-description {
    line-height: 1.6;
    margin: 0 0 30px 0;
  }

  #section-{{ section.id }} .comparison-button {
    display: inline-block;
    padding: 14px 28px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  #section-{{ section.id }} .comparison-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }

  @media (max-width: 768px) {
    #section-{{ section.id }} .comparison-title {
      font-size: {{ section.settings.title_size_mobile }}px !important;
    }

    #section-{{ section.id }} .comparison-subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px !important;
    }

    #section-{{ section.id }} .comparison-description {
      font-size: {{ section.settings.description_size_mobile }}px !important;
    }

    #section-{{ section.id }} .comparison-button {
      font-size: {{ section.settings.button_text_size_mobile }}px !important;
    }

    #section-{{ section.id }} .bottom-comparison-image {
      width: 220px;
    }

    #section-{{ section.id }} .image-callout .callout-text {
      font-size: {{ section.settings.text_size_mobile }}px !important;
    }

  }
</style>

{% schema %}
{
  "name": "Energy Comparison",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width (px)",
      "default": "1200"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top Desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom Desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top Mobile",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom Mobile",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 50
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "custom_classes",
      "label": "Custom CSS Classes"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_image",
      "label": "Bottom Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Tried It All? Still Exhausted?"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },

    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Title Size Mobile",
      "min": 18,
      "max": 40,
      "step": 2,
      "default": 28
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "You're Not Alone."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#ff4757"
    },

    {
      "type": "range",
      "id": "subtitle_size_mobile",
      "label": "Subtitle Size Mobile",
      "min": 14,
      "max": 30,
      "step": 2,
      "default": 20
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>You've tried more coffee, energy drinks, vitamins from the store, even quick-fix supplements... And yet – you're still dragging through the day. Why?</p><p>Because most of those solutions are temporary boosters or overdosed formulas. They don't address the root cause: your body's energy production at a cellular level.</p><p>It's not that these options are bad – they're just not complete.</p><p>That's why Vitamin H2 combines the right nutrients, in the right form, to truly recharge your body from the bottom up.</p>"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "description_size_desktop",
      "label": "Description Size Desktop",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "description_size_mobile",
      "label": "Description Size Mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 14
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Natural Energy Reset Today"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#ff4757"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },

    {
      "type": "range",
      "id": "button_text_size_mobile",
      "label": "Button Text Size Mobile",
      "min": 12,
      "max": 18,
      "step": 1,
      "default": 14
    },
    {
      "type": "header",
      "content": "Bottom Callout"
    },
    {
      "type": "richtext",
      "id": "bottom_callout_text",
      "label": "Bottom Callout Text",
      "default": "<p>Random multivitamins = not enough active ingredients</p>"
    },
    {
      "type": "color",
      "id": "bottom_callout_bg",
      "label": "Bottom Callout Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bottom_text_color",
      "label": "Bottom Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "image_callout",
      "name": "Image Callout",
      "settings": [
        {
          "type": "richtext",
          "id": "callout_text",
          "label": "Callout Text",
          "default": "<p><strong>Coffee</strong> = short-lived energy crash</p>"
        },

        {
          "type": "color",
          "id": "callout_bg",
          "label": "Callout Background",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#000000"
        },

        {
          "type": "range",
          "id": "text_size_mobile",
          "label": "Text Size Mobile",
          "min": 10,
          "max": 16,
          "step": 1,
          "default": 12
        },
        {
          "type": "checkbox",
          "id": "show_arrow",
          "label": "Show Arrow",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Energy Comparison"
    }
  ]
}
{% endschema %}
