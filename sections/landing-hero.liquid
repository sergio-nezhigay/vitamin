      "max": 48,
      "step": 2,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Experience the benefits of Vitamin H2 â€“ premium supplements formulated to enhance your energy, mental clarity, and overall wellness.</p>"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Buy now"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary Button URL"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Primary Button Background",
      "default": "#e74c3c"
    },
    {
      "type": "color",
      "id": "primary_button_color",
      "label": "Primary Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Read more"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    },
    {
      "type": "color",
      "id": "secondary_button_color",
      "label": "Secondary Button Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Guarantee"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee Text",
      "default": "100% Satisfaction Guarantee"
    },
    {
      "type": "html",
      "id": "guarantee_icon",
      "label": "Guarantee Icon (SVG)"
    },
    {
      "type": "color",
      "id": "guarantee_color",
      "label": "Guarantee Color",
      "default": "#e74c3c"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
