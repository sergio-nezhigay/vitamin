    },
    {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile Layout",
      "options": [
        {
          "value": "image-first",
          "label": "Image First, Content Second"
        },
        {
          "value": "content-first",
          "label": "Content First, Image Second"
        }
      ],
      "default": "image-first"
    },
    {
      "type": "text",
      "id": "trust_text_before",
      "label": "Trust Text Before Number",
      "default": "Trusted by "
    },
    {
      "type": "text",
      "id": "trust_number",
      "label": "Trust Number",
      "default": "15,000+"
    },
    {
      "type": "text",
      "id": "trust_text_after",
      "label": "Trust Text After Number",
      "default": " Health Enthusiasts"
    }
  ],
  "presets": [
    {
      "name": "Premium Hero Section"
    }
  ]
