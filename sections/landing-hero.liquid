<section
  id="{{ section.id }}"
  class="premium-hero-section {{ section.settings.custom_classes }}"
  style="
    background-color: {{ section.settings.background_color | default: '#f8f6f3' }};
    padding-top: {{ section.settings.padding_top_desktop | default: 80 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
  "
>
  <div
    class="mx-auto leading-normal"
    style="max-width: 1920px;"
  >
    <div
      class="
        flex items-center lg:flex-row flex-col
        {% if section.settings.mobile_layout == 'content-first' %}
        flex-col lg:flex-row
        {% else %}
        flex-col-reverse lg:flex-row
        {% endif %}
      "
    >
      <div class="flex-1  text-left">
        <div class="px-6 lg:px-[112px] pt-8 !pb-8 lg:pt-0 lg:pb-0">
          {% if section.settings.trust_text != blank %}
            <div class="flex items-center gap-2 mb-[19px] md:mb-[22px]">
              <div class="flex gap-[6px] items-center md:gap-1">
                {% render 'icon-star-landing' %}
                {% render 'icon-star-landing' %}
                {% render 'icon-star-landing' %}
                {% render 'icon-star-landing' %}
                {% render 'icon-star-landing' %}
              </div>
              <p
                class="text-[12px] m-0 font-display font-medium md:text-[16px] max-sm:leading-[2]"
                style="color: {{ section.settings.trust_text_color | default: '#666' }}"
              >
                {{ section.settings.trust_text_before }}
                <span class="font-bold">{{ section.settings.trust_number }}</span>
                {{ section.settings.trust_text_after }}
              </p>
            </div>
          {% endif %}

          {% if section.settings.title != blank %}
            <h1
              class="font-medium text-[28px] md:text-[48px] leading-[1.18] "
              style="              color: {{ section.settings.title_color | default: '#2c2c2c' }};"
            >
              {{ section.settings.title }}
            </h1>
          {% endif %}

          {% if section.settings.description != blank %}
            <div
              class="mb-6 text-[16px] md:text-[20px] leading-[1.5] font-semibold font-display"
              style="color: {{ section.settings.description_color | default: '#666' }};"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}

          <div class="flex gap-3 mb-4 flex-wrap ">
            {% if section.settings.primary_button_text != blank and section.settings.primary_button_url != blank %}
              <a
                href="{{ section.settings.primary_button_url }}"
                class="inline-block py-3 px-[18px] no-underline rounded-[8px] font-bold text-[16px] border-0  cursor-pointer font-display text-center min-w-[106px] max-md:w-full"
                style="
                  background-color: {{ section.settings.primary_button_bg | default: '#e74c3c' }};
                  color: {{ section.settings.primary_button_color | default: '#ffffff' }};
                "
              >
                {{ section.settings.primary_button_text }}
              </a>
            {% endif %}

            {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_url != blank %}
              <a
                href="{{ section.settings.secondary_button_url }}"
                class="inline-block py-[11px] px-[18px] no-underline rounded-[8px] font-bold text-[16px] cursor-pointer font-display text-center min-w-[106px] max-md:w-full bg-white border border-[#D0D5DD]"
                style="color: {{ section.settings.secondary_button_color | default: '#666' }};"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>

          {% if section.settings.guarantee_text != blank %}
            <div
              class="flex items-center gap-2 text-sm font-medium"
              style="color: {{ section.settings.guarantee_color | default: '#e74c3c' }};"
            >
              <div class="flex items-center  w-6 h-6 flex-shrink-0">
                {% if section.settings.guarantee_icon != blank %}
                  {{ section.settings.guarantee_icon }}
                {% else %}
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <circle cx="8" cy="8" r="7.5" stroke="currentColor"/>
                    <path d="M6 8l2 2 4-4" stroke="currentColor" stroke-width="1.5" fill="none"/>
                  </svg>
                {% endif %}
              </div>
              <span class="text-gray-700 font-display font-bold text-[16px] leading-[1.5]">
                {{- section.settings.guarantee_text -}}
              </span>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="flex-1 flex justify-center items-center">
        {% if section.settings.hero_image != blank %}
          <div class="relative flex max-md:aspect-square xl:w-full md:aspect-[720/600] max-w-[960px]">
            <img
              src="{{ section.settings.hero_image | image_url: width:800 }}"
              alt="{{ section.settings.hero_image.alt | default: section.settings.title }}"
              class="w-full h-full object-cover"
              width="800"
              height="800"
            >
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1024px) {
    #{{ section.id }} h1 {
      font-size: {{ section.settings.title_size_desktop | default: 48 }}px !important;
    }

    #{{ section.id }} .premium-hero-section {
      padding-top: {{ section.settings.padding_top_desktop | default: 80 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop | default: 80 }}px !important;
    }
  }

  @media (max-width: 1023px) {
    #{{ section.id }} .premium-hero-section {
      padding-top: {{ section.settings.padding_top_mobile | default: 40 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 40 }}px !important;
    }

    #{{ section.id }} .gap-15 {
      gap: 2.5rem;
    }

    #{{ section.id }} .min-h-[600px] {
      min-height: auto;
    }
  }

  @media (max-width: 480px) {
    #{{ section.id }} .flex-wrap {
      flex-direction: column;
      align-items: center;
    }

    #{{ section.id }} .min-w-[140px] {
      width: 100%;
      max-width: 280px;
    }

    #{{ section.id }} .py-3.5 {
      padding-top: 0.75rem;
      padding-bottom: 0.75rem;
    }

    #{{ section.id }} .px-8 {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    #{{ section.id }} .text-base {
      font-size: 0.875rem;
    }

    #{{ section.id }} .min-w-[120px] {
      min-width: 120px;
    }
  }

  #{{ section.id }} .gap-15 {
    gap: 3.75rem;
  }

  #{{ section.id }} .premium-hero-section {
    position: relative;
    overflow: hidden;
  }

  #{{ section.id }} p {
    margin: 0;
  }

  #{{ section.id }} h1 {
    margin-bottom: 14px;
  }
</style>

{% schema %}
{
  "name": "Landing Hero",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "custom_classes",
      "label": "Custom CSS Classes"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width (px)",
      "default": "1200"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top - Desktop",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom - Desktop",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top - Mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom - Mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f6f3"
    },
    {
      "type": "header",
      "content": "Trust Badge"
    },
    {
      "type": "text",
      "id": "trust_text",
      "label": "Trust Text",
      "default": "Trusted by 15,000+ Health Enthusiasts"
    },
    {
      "type": "color",
      "id": "trust_text_color",
      "label": "Trust Text Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Fuel Your Body,<br>Energize Your Life</p>"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#2c2c2c"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "label": "Title Size - Desktop",
      "min": 24,
      "max": 72,
      "step": 2,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Title Size - Mobile",
