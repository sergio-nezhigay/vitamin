/* Highlight Column */
.comparison-section .highlight {
    border: 2px solid #ea5167;
    position: relative;
    margin-top: -1px;
  border-radius: 15px;
}

.comparison-section .highlight .product-header h3 {
    color: #000000;
}

/* Scrollable Design for Mobile */
@media (max-width: 768px) {
    .comparison-section {
        overflow-x: auto; /* Enables horizontal scrolling */
    }

    .comparison-table {
        display: grid;
        /* grid-template-columns: 1.5fr 1fr; /* Show only 2 columns */ */
        min-width: 600px; /* Prevent collapsing of table, ensuring scrolling */
        width:650px;
    }

    .feature-column ul li,
    .product-column ul li {
        text-align: center;
        justify-content: center;
        padding: 0;
    }

    .feature-column {
        text-align: center;
        padding: 0;
    }
}

.border-top {
    border-top: 1px solid lightgray !important;
}

.border-bottom {
    border-bottom: 1px solid lightgray !important;
}

    
