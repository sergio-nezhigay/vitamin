{%- liquid
  assign blogs_per_page = section.settings.blogs_per_page | default: 7
  assign current_page = request.url | split: 'page=' | last | plus: 0 | at_least: 1
  assign offset = current_page | minus: 1 | times: blogs_per_page
-%}

<section
  id="{{ section.id }}"
  class="blog-list-section pt-[{{ section.settings.padding_top_mobile }}px] pb-[{{ section.settings.padding_bottom_mobile }}px] md:pt-[{{ section.settings.padding_top_desktop }}px] md:pb-[{{ section.settings.padding_bottom_desktop }}px] {{ section.settings.custom_classes }}"
  style="background: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};"
>
  <div class="container mx-auto px-4 max-w-[{{ section.settings.max_width }}px]">
    {%- if section.settings.show_tabs -%}
      <!-- Tabs Navigation -->
      <div class="flex flex-wrap gap-2 mb-8 border-b border-gray-200">
        <button
          class="tab-btn active px-4 py-2 text-sm font-medium border-b-2 border-transparent hover:border-gray-300 transition-colors"
          data-tab="all"
        >
          {{ section.settings.tab_all_text | default: 'View all' }}
        </button>
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab' -%}
            <button
              class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent hover:border-gray-300 transition-colors"
              data-tab="{{ block.settings.tab_handle }}"
            >
              {{ block.settings.tab_title }}
            </button>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <!-- Blog Content -->
    <div class="blog-content">
      <!-- Desktop Layout -->
      <div class="hidden md:grid md:grid-cols-12 gap-6">
        {%- liquid
          assign featured_blog = null
          assign right_blogs = ''
          assign bottom_blogs = ''
          assign blog_count = 0

          for article in blog.articles limit: blogs_per_page offset: offset
            if blog_count == 0
              assign featured_blog = article
            elsif blog_count <= 3
              assign right_blogs = right_blogs | append: article.id | append: ','
            else
              assign bottom_blogs = bottom_blogs | append: article.id | append: ','
            endif
            assign blog_count = blog_count | plus: 1
          endfor

          assign right_blog_ids = right_blogs | split: ','
          assign bottom_blog_ids = bottom_blogs | split: ','
        -%}

        <!-- Featured Blog (Left Column) -->
        {%- if featured_blog -%}
          <div class="col-span-8">
            <article
              class="featured-article group cursor-pointer"
              onclick="window.location.href='{{ featured_blog.url }}'"
            >
              <div class="relative overflow-hidden rounded-lg mb-4">
                {%- if featured_blog.image -%}
                  <img
                    src="{{ featured_blog.image | image_url: width: 600 }}"
                    alt="{{ featured_blog.image.alt | default: featured_blog.title }}"
                    class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    width="600"
                    height="400"
                  >
                {%- else -%}
                  <div class="w-full h-80 bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400">No image</span>
                  </div>
                {%- endif -%}

                {%- if section.settings.show_badges -%}
                  <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                    {%- for tag in featured_blog.tags limit: 3 -%}
                      <span class="badge px-3 py-1 bg-white/90 text-xs font-medium rounded-full">{{ tag }}</span>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>

              <div class="space-y-3">
                <time class="text-sm text-gray-500">{{ featured_blog.published_at | date: '%d %b %Y' }}</time>
                <h2 class="text-2xl font-bold leading-tight group-hover:text-blue-600 transition-colors">
                  {{ featured_blog.title }}
                </h2>
                {%- if featured_blog.excerpt != blank -%}
                  <p class="text-gray-600 line-clamp-3">{{ featured_blog.excerpt | strip_html | truncate: 150 }}</p>
                {%- endif -%}

                {%- if section.settings.show_badges and featured_blog.tags.size > 3 -%}
                  <div class="flex flex-wrap gap-2 mt-3">
                    {%- for tag in featured_blog.tags offset: 3 limit: 2 -%}
                      <span class="badge px-2 py-1 bg-gray-100 text-xs rounded-full">{{ tag }}</span>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>
            </article>
          </div>
        {%- endif -%}

        <!-- Right Column Blogs -->
        <div class="col-span-4 space-y-6">
          {%- for article in blog.articles offset: 1 limit: 3 -%}
            <article class="right-article group cursor-pointer" onclick="window.location.href='{{ article.url }}'">
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  {%- if article.image -%}
                    <img
                      src="{{ article.image | image_url: width: 120 }}"
                      alt="{{ article.image.alt | default: article.title }}"
                      class="w-20 h-20 object-cover rounded-lg group-hover:opacity-80 transition-opacity"
                      loading="lazy"
                      width="120"
                      height="120"
                    >
                  {%- else -%}
                    <div class="w-20 h-20 bg-gray-200 rounded-lg"></div>
                  {%- endif -%}
                </div>

                <div class="flex-1 min-w-0">
                  <time class="text-xs text-gray-500">{{ article.published_at | date: '%d %b %Y' }}</time>
                  <h3 class="font-semibold text-sm leading-tight mt-1 group-hover:text-blue-600 transition-colors line-clamp-2">
                    {{ article.title }}
                  </h3>
                  {%- if article.excerpt != blank -%}
                    <p class="text-xs text-gray-600 mt-2 line-clamp-2">
                      {{ article.excerpt | strip_html | truncate: 80 }}
                    </p>
                  {%- endif -%}

                  {%- if section.settings.show_badges -%}
                    <div class="flex gap-1 mt-2">
                      {%- for tag in article.tags limit: 2 -%}
                        <span class="badge px-2 py-0.5 bg-blue-50 text-xs rounded-full">{{ tag }}</span>
                      {%- endfor -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </article>
          {%- endfor -%}
        </div>
      </div>

      <!-- Bottom Row (Desktop) -->
      <div class="hidden md:grid md:grid-cols-3 gap-6 mt-12">
        {%- for article in blog.articles offset: 4 limit: 3 -%}
          <article class="bottom-article group cursor-pointer" onclick="window.location.href='{{ article.url }}'">
            <div class="relative overflow-hidden rounded-lg mb-4">
              {%- if article.image -%}
                <img
                  src="{{ article.image | image_url: width: 400 }}"
                  alt="{{ article.image.alt | default: article.title }}"
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  width="400"
                  height="300"
                >
              {%- else -%}
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-400 text-sm">No image</span>
                </div>
              {%- endif -%}

              {%- if section.settings.show_badges -%}
                <div class="absolute top-3 left-3">
                  {%- assign first_tag = article.tags.first -%}
                  {%- if first_tag -%}
                    <span class="badge px-2 py-1 bg-white/90 text-xs font-medium rounded-full">{{ first_tag }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>

            <div class="space-y-2">
              <time class="text-sm text-gray-500">{{ article.published_at | date: '%d %b %Y' }}</time>
              <h3 class="font-bold leading-tight group-hover:text-blue-600 transition-colors line-clamp-2">
                {{ article.title }}
              </h3>
              {%- if article.excerpt != blank -%}
                <p class="text-sm text-gray-600 line-clamp-2">{{ article.excerpt | strip_html | truncate: 100 }}</p>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      </div>

      <!-- Mobile Layout -->
      <div class="md:hidden space-y-6">
        {%- for article in blog.articles limit: blogs_per_page offset: offset -%}
          <article class="mobile-article group cursor-pointer" onclick="window.location.href='{{ article.url }}'">
            <div class="relative overflow-hidden rounded-lg mb-4">
              {%- if article.image -%}
                <img
                  src="{{ article.image | image_url: width: 500 }}"
                  alt="{{ article.image.alt | default: article.title }}"
                  class="w-full h-56 object-cover group-hover:opacity-90 transition-opacity"
                  loading="lazy"
                  width="500"
                  height="400"
                >
              {%- else -%}
                <div class="w-full h-56 bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-400">No image</span>
                </div>
              {%- endif -%}

              {%- if section.settings.show_badges -%}
                <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                  {%- for tag in article.tags limit: 2 -%}
                    <span class="badge px-2 py-1 bg-white/90 text-xs font-medium rounded-full">{{ tag }}</span>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>

            <div class="space-y-3">
              <time class="text-sm text-gray-500">{{ article.published_at | date: '%d %b %Y' }}</time>
              <h2 class="text-xl font-bold leading-tight group-hover:text-blue-600 transition-colors">
                {{ article.title }}
              </h2>
              {%- if article.excerpt != blank -%}
                <p class="text-gray-600 line-clamp-3">{{ article.excerpt | strip_html | truncate: 120 }}</p>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      </div>
    </div>

    {%- if section.settings.show_pagination -%}
      <!-- Pagination -->
      <div class="flex justify-center mt-12">
        <nav class="pagination flex items-center gap-2">
          {%- if current_page > 1 -%}
            <a
              href="?page={{ current_page | minus: 1 }}"
              class="pagination-btn px-3 py-2 text-gray-600 hover:text-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </a>
          {%- endif -%}

          {%- liquid
            assign total_pages = blog.articles.size | divided_by: blogs_per_page | ceil
            assign start_page = current_page | minus: 2 | at_least: 1
            assign end_page = start_page | plus: 4 | at_most: total_pages
            assign page_diff = end_page | minus: start_page
            if page_diff < 4
              assign start_page = end_page | minus: 4 | at_least: 1
            endif
          -%}

          {%- for i in (start_page..end_page) -%}
            {%- if i == current_page -%}
              <span class="pagination-btn px-4 py-2 bg-blue-600 text-white rounded-md">{{ i }}</span>
            {%- else -%}
              <a
                href="?page={{ i }}"
                class="pagination-btn px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-md transition-colors"
              >
                {{- i -}}
              </a>
            {%- endif -%}
          {%- endfor -%}

          {%- if current_page < total_pages -%}
            <a
              href="?page={{ current_page | plus: 1 }}"
              class="pagination-btn px-3 py-2 text-gray-600 hover:text-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          {%- endif -%}
        </nav>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  #{{ section.id }} .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  #{{ section.id }} .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  #{{ section.id }} .tab-btn.active {
    border-bottom-color: #2563eb;
    color: #2563eb;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const section = document.getElementById(sectionId);

    if (!section) return;

    // Tab functionality
    const tabBtns = section.querySelectorAll('.tab-btn');
    const articles = section.querySelectorAll('article');

    tabBtns.forEach((btn) => {
      btn.addEventListener('click', function (e) {
        e.preventDefault();

        // Update active tab
        tabBtns.forEach((tab) => tab.classList.remove('active'));
        this.classList.add('active');

        const selectedTab = this.getAttribute('data-tab');

        // Filter articles based on tab
        articles.forEach((article) => {
          if (selectedTab === 'all') {
            article.style.display = '';
          } else {
            // This would need server-side filtering for real implementation
            // For now, show all articles
            article.style.display = '';
          }
        });
      });
    });

    // Smooth scroll for pagination
    const paginationLinks = section.querySelectorAll('.pagination-btn');
    paginationLinks.forEach((link) => {
      if (link.tagName === 'A') {
        link.addEventListener('click', function (e) {
          e.preventDefault();
          window.scrollTo({ top: section.offsetTop - 50, behavior: 'smooth' });
          setTimeout(() => {
            window.location.href = this.href;
          }, 300);
        });
      }
    });
  });
</script>

