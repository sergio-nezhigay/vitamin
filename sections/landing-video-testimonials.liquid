{% liquid
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color
  assign padding_top = section.settings.padding_top | append: 'px'
  assign padding_bottom = section.settings.padding_bottom | append: 'px'
  assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'

  assign heading = product.metafields.custom.video_testimonials_heading | metafield_tag | default: section.settings.heading
  assign description = product.metafields.custom.video_testimonials_description | metafield_tag | default: section.settings.description
  assign video_testimonials_items = product.metafields.custom.video_testimonials_items.value
  assign blocks = video_testimonials_items | default: section.blocks
%}

{% if heading != blank or blocks.size > 0 or blocks != blank or description != blank %}
  {{ 'video-testimonials.css' | asset_url | stylesheet_tag }}

  {% capture play_button %}
    <div class="video-testimonials-wrapper__play-button">
      <img src="https://cdn.shopify.com/s/files/1/0872/7969/8251/files/Frame.svg?v=1754825739" alt="Play" width="42" height="42">
    </div>
  {% endcapture %}

  <div
    class="video-testimonials-wrapper"
    style="
      --padding-top: {{ padding_top }};
      --padding-bottom: {{ padding_bottom }};
      --padding-top-mobile: {{ padding_top_mobile }};
      --padding-bottom-mobile: {{ padding_bottom_mobile }};
      --bg-color: {{ bg_color }};
      --text-color: {{ text_color }}
    "
  >
    <div class="video-testimonials-wrapper__container page-width">
      <div class="video-testimonials-wrapper__header">
        {% if heading != blank %}
          <div class="video-testimonials-wrapper__heading">{{ heading }}</div>
        {% endif %}

        {% if description != blank %}
          <div class="video-testimonials-wrapper__description">{{ description }}</div>
        {% endif %}
      </div>

      <div class="video-testimonials-wrapper__content">
        <div class="video-testimonials-grid">
          {% for block in blocks %}
            {% liquid
              assign poster_metafilds = block.poster | metafield_tag
              assign poster = block.settings.image

              assign video_url = block.video_url | default: block.settings.video_url

              assign video_type = ''
              assign video_id = ''

              if video_url contains 'youtube.com'
                assign video_type = 'youtube'
                assign video_id = video_url | split: 'v=' | last | split: '&' | first
              elsif video_url contains 'youtu.be'
                assign video_type = 'youtube'
                assign video_id = video_url | split: '/' | last
              elsif video_url contains 'vimeo.com'
                assign video_type = 'vimeo'
                assign video_id = video_url | split: '/' | last
              endif

              assign video_mp4_metafilds = block.video_mpg4
              assign video_mp4 = block.settings.video
              assign mp4_source = video_mp4.sources | where: 'format', 'mp4' | sort: 'height' | last
            %}

            <div class="video-testimonials-item">
              <div
                class="video-testimonials-wrapper__poster {% if video_url != blank or video_mp4 != blank or video_mp4_metafilds != blank -%}video-poster{%- endif -%}"
                {% if video_url != blank %}
                  data-video-type="{{ video_type }}" data-video-id="{{ video_id }}"
                {% elsif video_mp4_metafilds != blank %}
                  data-video-type="media-mp4"
                  data-video-html="{{ video_mp4_metafilds | media_tag: image_size: '1100x' | escape }}"
                {% elsif video_mp4 != blank %}
                  data-video-type="mp4"
                  data-video-url="{{ mp4_source.url | prepend: 'https:' }}"
                {% endif %}
              >
                {% if poster_metafilds != blank %}
                  {{ poster_metafilds }}
                {% else %}
                  {% if poster != blank %}
                    {{ poster | image_url: width: 400 | image_tag: preload: true }}
                  {% elsif video_mp4 != blank and poster == blank %}
                    {{ video_mp4.preview_image.src | image_url: width: 400 | image_tag: preload: true }}
                  {% endif %}
                {% endif %}

                {{ play_button }}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div id="video-popup" class="video-popup">
        <div class="video-popup__content">
          <span id="video-close-btn" class="video-popup__close-btn">&times;</span>
          <div class="video-popup__wrapper" id="video-wrapper"></div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const posters = document.querySelectorAll('.video-poster');
    const popup = document.getElementById('video-popup');
    const videoWrapper = document.getElementById('video-wrapper');
    const closeBtn = document.getElementById('video-close-btn');

    if (posters) {
      posters.forEach((poster) => {
        poster.addEventListener('click', () => {
          const type = poster.dataset.videoType;
          let embed = '';

          if (type === 'youtube') {
            const id = poster.dataset.videoId;
            embed = `<iframe src="https://www.youtube.com/embed/${id}?enablejsapi=1&autoplay=0" frameborder="0" allowfullscreen></iframe>`;
          } else if (type === 'vimeo') {
            const id = poster.dataset.videoId;
            embed = `<iframe src="https://player.vimeo.com/video/${id}?autoplay=0" frameborder="0" allowfullscreen></iframe>`;
          } else if (type === 'mp4') {
            const url = poster.dataset.videoUrl;
            embed = `<video src="${url}" controls></video>`;
          } else if (type === 'media-mp4') {
            const videoHtml = poster.dataset.videoHtml;
            embed = videoHtml;
          }

          videoWrapper.innerHTML = embed;
          popup.classList.add('video-popup--open');
        });
      });
    }

    closeBtn.addEventListener('click', () => {
      popup.classList.remove('video-popup--open');
      videoWrapper.innerHTML = '';
    });

    popup.addEventListener('click', (e) => {
      if (e.target === popup) {
        popup.classList.remove('video-popup--open');
        videoWrapper.innerHTML = '';
      }
    });
  });
</script>

{% schema %}
{
  "name": "Video testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>Hear It from Our Customers</h2>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Desktop padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    },
    {
      "type": "header",
      "content": "Mobile padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "type": "video_item",
      "name": "Video item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Poster"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "label": "Video URL",
          "accept": ["youtube", "vimeo"]
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video mpg4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video testimonials",
      "category": "Custom",
      "blocks": [
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        }
      ]
    }
  ]
}
{% endschema %}
